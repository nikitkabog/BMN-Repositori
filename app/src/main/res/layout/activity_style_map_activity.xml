<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".menu"
        android:background="#E6E6FA">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="Выбрать стиль Пацанских карт"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:textSize="33sp"
            android:textColor="#00665F"
    />

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp">

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дефолт"
                android:id="@+id/button_style_1"
                android:background="#fef7ef"
                android:padding="5dp"
                android:elevation="4dp"
                android:textColor="#31919c"
                android:layout_centerHorizontal="true"
        />

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Закончился цветной картридж"
                android:id="@+id/button_style_2"
                android:layout_below="@id/button_style_1"
                android:background="#f5f5f5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:elevation="4dp"
                android:textColor="#757575"
        />

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Петербург глазами Достоевского"
                android:id="@+id/button_style_3"
                android:layout_below="@id/button_style_2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#ebe3cd"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:elevation="4dp"
                android:textColor="#93817c"
        />

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Темная тема"
                android:id="@+id/button_style_4"
                android:layout_below="@id/button_style_3"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#212121"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:elevation="4dp"
                android:textColor="#8a8a8a"
        />

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Не про белые ночи"
                android:id="@+id/button_style_5"
                android:layout_below="@id/button_style_4"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#242f3e"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:elevation="4dp"
                android:textColor="#d59563"
        />

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Баклажановая"
                android:id="@+id/button_style_6"
                android:layout_below="@id/button_style_5"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#1d2c4d"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:elevation="4dp"
                android:textColor="#6f9ba5"
        />

    </RelativeLayout>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назад"
            android:id="@+id/button_back_from_styles_menu"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:elevation="2dp"
            android:textColor="#05021D"
            style="@style/MyStyle.ButtonMain"
    />

</RelativeLayout>