<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".menu"
        android:background="#E6E6FA">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:text="Выбрать стиль Пацанских карт"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:textSize="33sp"
            android:textColor="#00665F"
    />

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp">

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дефолт"
                android:id="@+id/button_style_1"
                android:background="#33CEC3"
                android:padding="5dp"
                android:elevation="4dp"
                android:textColor="#05021D"
                android:layout_centerHorizontal="true"
        />

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Закончился цветной картридж"
                android:id="@+id/button_style_2"
                android:layout_below="@id/button_style_1"
                android:background="#009D91"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:elevation="4dp"
                android:textColor="#05021D"
        />

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Петербург глазами Достоевского"
                android:id="@+id/button_style_3"
                android:layout_below="@id/button_style_2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#5DCEC6"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:elevation="4dp"
                android:textColor="#05021D"
        />

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Темная тема"
                android:id="@+id/button_style_4"
                android:layout_below="@id/button_style_3"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#00665E"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:elevation="4dp"
                android:textColor="#05021D"
        />

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Не про белые ночи"
                android:id="@+id/button_style_5"
                android:layout_below="@id/button_style_4"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#33CEC3"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:elevation="4dp"
                android:textColor="#05021D"
        />

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Баклажановая"
                android:id="@+id/button_style_6"
                android:layout_below="@id/button_style_5"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="#1D766F"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:elevation="4dp"
                android:textColor="#05021D"
        />

    </RelativeLayout>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назад"
            android:id="@+id/button_back_from_styles_menu"
            android:layout_alignParentBottom="true"
            android:background="#66A3D2"
            android:layout_margin="10dp"
            android:padding="6dp"
            android:elevation="2dp"
            android:textColor="#05021D"
    />

</RelativeLayout>